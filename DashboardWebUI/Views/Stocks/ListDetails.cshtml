@model IEnumerable<DashboardWebUI.Models.StockDetailModel>

@{
    ViewBag.Title = "ViewStockListDetails";
}

<h2>Stock Watch List Details</h2>

<table class="table table-striped table-bordered table-responsive table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegularMarketPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FiftyDayAverage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TwoHundredDayAverage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarketCap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullExchangeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FiftyTwoWeekLow)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FiftyTwoWeekHigh)
        </th>
        <th>Remove?</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegularMarketPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiftyDayAverage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TwoHundredDayAverage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullExchangeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiftyTwoWeekLow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiftyTwoWeekHigh)
            </td>
            <td>
                <button class="btn-danger">@Html.ActionLink("Delete", "Delete", new { symbol = item.Symbol }, new { @style = "font-weight:bolder; color:snow" })</button>
            </td>
        </tr>
    }

</table>

<p>
    <button class="btn btn-default"> @Html.ActionLink("Add New", "Add") </button>
</p>

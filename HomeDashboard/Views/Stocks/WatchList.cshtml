@model IEnumerable<DashboardWebUI.Models.StockSymbolModel>

@{
    ViewBag.Title = "StockWatchList";
}

<h2>Stock Watch List</h2>

<div class="row">
    <div class="col-lg-2">
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th class="col-lg-push-1">
                    @Html.DisplayNameFor(model => model.Symbol)
                </th>
                <th class="col-lg-1"></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td align="center">
                <a class="btn-sm btn-danger" href=@Url.Action("Delete", new { symbol = item.Symbol })>
                    <i class="far fa-trash-alt fa-lg"></i>
                </a>
            </td>
        </tr>
            }
        </table>
    </div>
</div>

<a class="btn btn-success" href=@Url.Action("Add")>Add Stock</a>
<a class="btn btn-default" href=@Url.Action("ListDetails")>Stock Info</a>

